<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Categoria y Productos</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @category.name %></td>
        <td><%= link_to 'Edit', edit_category_path(@category) %></td>
        <td><%= link_to 'Back', categories_path %></td>
      </tr>
    </tbody>
  </table>
</div>


<div class="container">
  <div class="jumbotron">
    <%= form_with(model: [ @category, @product], local: true )  do |form| %>
    <div class="form-group">
      <%= form.label :name, "Nombre" %>
      <%= form.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :price, "Price" %>
      <%= form.text_field :price, class:"form-control" %>
    </div>
      <%= form.submit "Guardar", class:"btn btn-success" %>
    <% end %>
  </div>

</div>

<div class="container">
  <h2>Listado de Productos</h2>
  <table class="table table-striped">
    <thead>
      <th>Name</th>
      <th>Price</th>
    </thead>
    <tbody>
      <% @category.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Destroy', category_product_path(@category, product ), method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
